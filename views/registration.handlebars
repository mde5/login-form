
    <div class="login-page">
        <div class="form">
          {{#if errorMessage}}
            <div class="alert alert-warning"> {{errorMessage}} </div>     
          {{/if}}
          <form method="post" action="/registration" class="register-form">
            <input type="text" name="userName" id="userName" pattern="[a-zA-Z0-9]+([_ -]?[a-zA-Z0-9])" minlength="4" maxlength="15" title="Letters, numbers, dashes, and underscores only" placeholder="username" required />
            <input type="password" name="password" id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" minlength="8" maxlength="30" title="Must contain a number, uppercase and lowercase letter, and at least 8 or more characters" placeholder="password" required />
            <input type="password" name="password2" id="password2" placeholder="confirm password" required />
            <input type="text" name="email" id="email" pattern="[A-z0-9._%+-]+@[A-z0-9.-]+\.[A-z]{2,4}" minlength="4" maxlength="30" placeholder="email address" required/>
            <button>create</button>
            <p class="message">Already registered? <a href="/">Sign In</a></p>
          </form>
        </div>
      </div>
